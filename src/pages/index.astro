---
import "../styles/global.css";

// Array con las tarjetas
const cards = [
    {
        title: "Introducción a los estudios regionales",
        description:
            "Varios links caidos, varios recursos con links que pueden carse en cualquier momento, *Puede tardar en cargar",
        link: "01IER",
        riesgo: "Inevitable",
        active: true,
    },
    {
        title: "Derecho Constitucional Mexicano",
        description:
            "Todos son videos de yotube de cuentas de los profesores, si se cae una cuenta se caen varios videos.",
        link: "01DCM",
        riesgo: "Alto",
        active: true,
    },
    {
        title: "Estadística Descriptiva",
        description:
            "Riesgo moderado de links caidos, la mayoria de los códigos de error son por protocolos que tal vez no carguen algunos ordenadores.",
        link: "01ED",
        riesgo: "Moderado",
        active: true,
    },
    {
        title: "Filosofía Política y Formas de Gobierno",
        description:
            "El riesgo es bajo en esta materia de que los links se caigan",
        link: "01FPFG",
        riesgo: "Moderador",
        active: true,
    },
];
---

<html lang="es">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>SUAYED - Índice de Recursos</title>
    </head>

    <body class="bg-gray-100 min-h-screen">
        <nav class="bg-amber-400 p-4 shadow-md">
            <div class="container mx-auto flex justify-between items-center">
                <div class="text-xl font-bold">SUAYED RRII</div>
            </div>
        </nav>

        <main class="container h-screen mx-auto py-8 px-4">
            <h1 class="text-3xl font-bold text-center mb-8 text-gray-800">
                Recursos Académicos
            </h1>

            <!-- Generación dinámica de tarjetas -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-16">
                {
                    cards.map((card) => (
                        <div class="bg-white rounded-lg shadow-lg hover:shadow-xl transition-shadow duration-300">
                            <span
                                class={
                                    card.riesgo === "Inevitable"
                                        ? "px-2 py-1 bg-violet-800 text-white rounded-lg -m-6 text-sm"
                                        : card.riesgo === "Alto"
                                          ? "px-2 py-1 bg-red-800 text-white rounded-lg -m-6 text-sm"
                                          : card.riesgo === "Moderado"
                                            ? "px-2 py-1 bg-green-800 text-white rounded-lg -m-6 text-sm"
                                            : "text-black"
                                }
                            >
                                Riesgo: <b>{card.riesgo}</b>
                            </span>
                            <div class="p-6">
                                <h2 class="text-xl font-bold text-blue-700 mb-2">
                                    {card.title}
                                </h2>
                                <p class="text-gray-600 mb-4">
                                    {card.description}
                                </p>
                                <div class="flex justify-center">
                                    <a
                                        href={card.link}
                                        class={`${
                                            card.active
                                                ? "bg-blue-600 hover:bg-blue-700"
                                                : "bg-gray-400 hover:bg-gray-500 cursor-not-allowed"
                                        } text-white font-bold py-2 px-6 rounded-full transition-colors duration-300`}
                                    >
                                        {card.active
                                            ? "Ver recursos"
                                            : "Próximamente"}
                                    </a>
                                </div>
                            </div>
                        </div>
                    ))
                }
            </div>
        </main>

        <footer class="bg-gray-800 text-white py-6">
            <div class="container mx-auto px-4 text-center">
                <p>© 2023 SUAYED - Todos los derechos reservados</p>
                <p class="mt-2 text-gray-400 text-sm">
                    Verificador de recursos académicos
                </p>
            </div>
        </footer>
    </body>
</html>
